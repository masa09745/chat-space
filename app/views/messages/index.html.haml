=render "shared/sidebar"

.contents
  .contents-room
    .room-index
      %h2.room-index__name
        = @group.name
      %ul.room-index__member
        Members :
        - @group.users.each do |user|
          %li.room-index__member__name=user.name
    = link_to edit_group_path(@group), class: "room-index__edit-btn" do
      Edit

  .contents-messages
    =render @messages

  .contents-form
    = form_for [@group, @message] do |f|
      .input-area
        = f.text_field :body, class: 'input-area__text', placeholder: "type a message"
        = f.label :image, class: 'input-area__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'input-area__image__file'
      = f.submit 'Send', class: 'send-btn'

